<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Cells" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary Cells color. -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
