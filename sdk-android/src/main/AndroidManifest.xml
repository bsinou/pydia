<?xml version="1.0" encoding="utf-8"?>
<manifest

    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sinou.android.pydia"
    android:versionName="@string/app_version">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CellsApp"
        android:allowBackup="true"
        android:icon="@android:drawable/star_on"
        android:label="@string/application_title"
        android:supportsRtl="true"
        android:theme="@style/Theme.CellsApp.NoActionBar">

        <activity
            android:name=".LandActivity"
            android:exported="true"
            android:theme="@style/Theme.CellsApp.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <!--
                <activity
                    android:name=".MainActivity"
                    android:exported="false">
                    <meta-data
                        android:name="android.app.default_searchable"
                        android:value=".SearchActivity"
                        android:theme="@style/AppTheme.AppBarOverlay"/>
                </activity>

                <activity
                    android:name=".SearchActivity"
                    android:exported="false">
                    <intent-filter>
                        <action android:name="android.intent.action.SEARCH" />
                    </intent-filter>
                    <meta-data
                        android:name="android.app.searchable"
                        android:resource="@xml/searchable" />
                </activity>
        -->

        <activity
            android:name=".UploadActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.SEND" />
                <data android:mimeType="*/*" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AuthActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="cellsauth" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="org.sinou.android.pydia.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>
