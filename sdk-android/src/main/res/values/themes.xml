<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Cells" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary Cells color. -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimary</item>

        <!-- Secondary Cells color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Top Android Status bar color -->
        <!--  This is the default for the time being, but kept here for later reference -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>

        <!-- Further customisation to come... -->
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>

    </style>

    <style name="Theme.Cells.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Cells.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.Cells.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="Theme.Cells.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationView</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="itemShapeFillColor">@color/transparent</item>
    </style>

    <style name="ThemeOverlay.App.NavigationView" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorPrimaryLight</item>
        <item name="colorOnSurface">@color/black</item>
<!--        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6</item>-->
<!--        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>-->
<!--        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>-->
<!--        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>-->
    </style>

    <style name="ThemeOverlay.Cells" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorSecondary</item>
    </style>

    <style name="ThemeOverlay.Cells.Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="colorOnPrimary">@color/colorSecondary</item>
    </style>

    <style name="Theme.Upload" parent="Theme.Cells">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
    </style>

    <style name="Theme.Upload.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Upload.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
    </style>

    <style name="Theme.Upload.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Divider">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:layout_marginTop">@dimen/margin_xsmall</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
    </style>

</resources>