<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sinou.android.pydia">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@android:drawable/star_on"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".LandActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ListAccounts"
            android:exported="true"
            android:label="@string/title_activity_list_accounts"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Authenticate"
            android:exported="true">
            <intent-filter android:label="@string/app_name">
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="callback"
                    android:scheme="cellsauth" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BrowseActivity"
            android:exported="true"
            android:label="Start Pydia">
        </activity>

    </application>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>