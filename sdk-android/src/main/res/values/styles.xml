<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Cells.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:opacity">translucent</item>
        <item name="android:textColor">@color/cells_secondary</item>
    </style>

    <style name="text_body" parent="TextAppearance.Material3.BodyLarge">
        <!-- <item name="android:fontFamily">@font/roboto</item> -->
        <item name="android:textSize">@dimen/text_body_size</item>
    </style>

    <style name="text_header" parent="text_body">
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:alpha">@dimen/alpha_list_primary</item>
    </style>

    <style name="text_list_primary" parent="text_body">
        <item name="android:textSize">@dimen/text_list_primary_size</item>
        <item name="android:alpha">@dimen/alpha_list_primary</item>
    </style>

    <style name="text_list_secondary" parent="text_body">
        <item name="android:textSize">@dimen/text_list_secondary_size</item>
        <item name="android:alpha">@dimen/alpha_list_secondary</item>
    </style>

    <style name="text_list_error" parent="text_list_secondary">
        <item name="android:textColor">@color/danger</item>
    </style>

    <style name="Cells.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@drawable/ic_sharp_search_24</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>


    <style name="Divider">
        <item name="android:background">@color/md_theme_light_surfaceVariant</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
    </style>

    <style name="Divider.Horizontal.List">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Divider.Horizontal.Dev">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/danger</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

