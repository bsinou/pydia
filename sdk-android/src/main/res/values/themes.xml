    <style name="Theme.Cells.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.Cells.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Cells.Appbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Cells.H5
        </item>
    </style>

    <style name="ThemeOverlay.Cells.Appbar" parent="ThemeOverlay.MaterialComponents.ActionBar.Primary">
        <item name="searchViewStyle">@style/Cells.SearchView</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="iconTint">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
    </style>

