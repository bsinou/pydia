    <style name="Theme.Cells.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Widget.Cells.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Cells.NavigationView</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="itemShapeFillColor">@color/transparent</item>
    </style>

    <style name="ThemeOverlay.Cells.NavigationView" parent="">
