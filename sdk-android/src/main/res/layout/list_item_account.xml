<?xml version="1.0" encoding="utf-8"?>

<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="account"
            type="org.sinou.android.pydia.room.account.Account" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_padding_medium">

        <!--    style="@style/avatar_icon"-->

        <ImageView
            android:id="@+id/account_avatar"

            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/list_account_item_height"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />
        <!--    tools:srcCompat="@drawable/ic_baseline_person_24"-->
        <TextView
            android:id="@+id/account_title"
            style="@style/text_list_primary"

            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/account_avatar"
            app:layout_constraintTop_toTopOf="@+id/account_avatar"
            tools:text="https://demo.pydio.com"
            app:account_primary_text="@{account}"/>

        <TextView
            android:id="@+id/account_description"
            style="@style/text_list_secondary"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/account_title"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/account_title"
            app:layout_constraintTop_toBottomOf="@+id/account_title"
            tools:text="admin@https://demo.pydio.com"
            app:account_secondary_text="@{account}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>