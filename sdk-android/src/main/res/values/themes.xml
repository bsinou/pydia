<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CellsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Cells color. -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimary</item>

        <!-- Secondary Cells color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Further customisation to come... -->
    </style>

    <style name="Theme.CellsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CellsApp.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.CellsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="Theme.CellsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Upload" parent="Theme.CellsApp">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
    </style>

    <style name="Theme.Upload.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Upload.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
    </style>

    <style name="Theme.Upload.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Divider">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:layout_marginTop">@dimen/margin_xsmall</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
    </style>

</resources>