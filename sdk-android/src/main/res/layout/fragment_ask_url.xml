<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/ask_url_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/form_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_title_size"
        android:text="@string/ask_url_title" />

    <!--    android:textColor="@color/spinner_text_color"-->
    <!--    android:textSize="@dimen/config_form_title_text_size"-->
    <!--    tools:ignore="RtlHardcoded"-->
    <TextView
        android:id="@+id/server_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/ask_url_desc" />
    <!--    android:textSize="@dimen/server_url_form_text_size"-->

    <EditText
        android:id="@+id/url_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri" />

    <!--
                    android:imeOptions="actionGo"

                        android:padding="@dimen/default_spacing"
                    android:drawablePadding="@dimen/default_spacing"
                    android:hint="@string/server_address_hint"
                    android:text="@string/pre_filled_server_address"
                    android:textSize="@dimen/form_field_text_size"
                    android:autofillHints="no"
                    android:background="@drawable/custom_input_background"

        android:singleLine="true"-->

    <Button
        android:id="@+id/action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:focusable="true"
        android:text="@string/ask_url_confirm"
        android:textAllCaps="true" />

</LinearLayout>

