<?xml version="1.0" encoding="utf-8"?>

<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="transfer"
            type="org.sinou.android.pydia.db.runtime.RUpload" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:updateProgress="@{transfer}"/>

        <TextView
            android:id="@+id/primaryText"
            style="@style/text_list_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            app:transferText="@{transfer}"
            tools:text="my-image-88639.jpg - 658KB - Started 2 years ago..." />

        <TextView
            android:id="@+id/secondaryText"
            style="@style/text_list_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            app:transferStatus="@{transfer}"
            tools:text="2 years ago... Maybe the server is unreachable?" />

    </LinearLayout>
</layout>