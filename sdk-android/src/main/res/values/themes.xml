<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Cells" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary Cells color. -->
        <item name="colorPrimary">@color/cells_main</item>
        <item name="colorPrimaryDark">@color/cells_main_accent</item>
        <item name="colorControlNormal">@color/cells_main</item>
        <item name="colorOnPrimary">@color/cells_on_main</item>

        <!-- Secondary Cells color. -->
        <item name="colorSecondary">@color/cells_secondary</item>
        <item name="colorSecondaryVariant">@color/cells_secondary_dark</item>
        <item name="colorOnSecondary">@color/cells_on_secondary</item>

        <!-- Top Android Status bar color -->
        <item name="android:statusBarColor">@color/cells_on_main</item>
    </style>

    <style name="Theme.Cells.Upload">
        <item name="colorPrimary">@color/cells_secondary</item>
        <item name="colorPrimaryDark">@color/cells_secondary_dark</item>
        <item name="colorControlNormal">@color/cells_secondary</item>
    </style>

    <style name="Theme.Cells.Offline">
        <item name="colorOnPrimary">@color/cells_main_accent</item>
        <item name="colorPrimary">@color/cells_main_surface</item>
        <item name="android:colorPrimary">@color/cells_main_surface</item>
        <item name="colorPrimaryDark">@color/cells_main_light</item>
        <item name="android:statusBarColor">@color/cells_main_light</item>
    </style>

    <style name="Theme.Cells.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/cells_main</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Overlays -->

    <style name="ThemeOverlay.Cells.Appbar" parent="ThemeOverlay.MaterialComponents.ActionBar.Primary">
        <item name="searchViewStyle">@style/Cells.SearchView</item>
        <!--<item name="colorPrimary">@color/colorMain</item>-->
        <item name="iconTint">?attr/colorOnPrimary</item>
        <!-- <item name="colorPrimaryVariant">?attr/colorOnPrimary</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item> -->
    </style>

    <style name="ThemeOverlay.Cells.NavigationView" parent="">
        <item name="colorPrimary">@color/cells_main</item>
        <item name="colorSurface">@color/cells_main_surface_light</item>
        <item name="colorOnSurface">@color/cells_main_accent</item>
    </style>

    <style name="ThemeOverlay.Cells.NavHeader" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:background">@color/cells_main</item>
        <item name="android:textColor">@color/cells_on_main</item>
        <item name="colorOnPrimary">@color/cells_secondary</item>
    </style>

    <style name="ThemeOverlay.Cells.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.Cells.Upload.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorOnPrimary">@color/cells_on_main</item>
    </style>

    <style name="ThemeOverlay.Cells.Upload.Popup" parent="ThemeOverlay.AppCompat.Light" />

</resources>
